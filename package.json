{
  "name": "universal-redux-jwt",
  "version": "0.0.1",
  "description": "JWT example with Universal Redux",
  "main": "index.js",
  "scripts": {
    "api-server": "better-npm-run api-server",
    "auth-server": "better-npm-run auth-server",
    "build": "better-npm-run build",
    "dev": "concurrent --kill-others \"npm run watch-client\" \"npm run api-server\" \"npm run auth-server\" \"npm run dev-server\"",
    "dev-server": "better-npm-run dev-server",
    "lint": "eslint -c .eslintrc src",
    "postinstall": "./bin/build_for_heroku.sh",
    "start": "concurrent --kill-others \"better-npm-run api\" \"better-npm-run auth\" \"better-npm-run server\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch-client": "better-npm-run watch-client"
  },
  "betterScripts": {
    "server": {
      "command": "node ./bin/start",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development"
      }
    },
    "api": {
      "command": "node ./bin/start_api",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3030
      }
    },
    "auth": {
      "command": "node ./bin/start_auth",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3060
      }
    },
    "dev-server": {
      "command": "node ./bin/start",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "api-server": {
      "command": "node ./bin/start_api",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3030
      }
    },
    "auth-server": {
      "command": "node ./bin/start_auth",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3060
      }
    },
    "build": {
      "command": "universal-redux-build",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production"
      }
    },
    "watch-client": {
      "command": "universal-redux-watch",
      "env": {
        "NODE_PATH": "./src",
        "UV_THREADPOOL_SIZE": 100
      }
    }
  },
  "author": {
    "name": "Buck DeFore"
  },
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.14.2",
    "concurrently": "1.0.0",
    "jsonwebtoken": "^5.4.1",
    "superagent": "^1.6.1",
    "universal-redux": "3.0.0-rc4"
  },
  "devDependencies": {
    "better-npm-run": "0.0.5",
    "classnames": "^2.2.0",
    "eslint-config-airbnb": "0.1.0",
    "express-jwt-proxy": "^0.5.4",
    "flexboxgrid": "^6.3.0",
    "normalize.css": "^3.0.3",
    "react": "^0.14.3",
    "react-addons-css-transition-group": "^0.14.3",
    "react-dom": "^0.14.3",
    "react-redux": "4.0.0",
    "react-router": "2.0.0-rc4",
    "react-toolbox": "^0.13.4",
    "redux-simple-router": "2.0.1"
  }
}
